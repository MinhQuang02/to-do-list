{
  "name": "to-do-list",
  "version": "1.0.0",
  "description": "A simple to-do list application using Tailwind CSS and Express.js",
  "scripts": {
    "start": "node server.js",
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build-watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch"
  },
  "keywords": [
    "tailwind",
    "css",
    "to-do-list",
    "express"
  ],
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.16"
  }
}
